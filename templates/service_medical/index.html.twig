{% extends 'base.html.twig' %}

{% block title %}Service Médical{% endblock %}

{% block body %}
    <div class="container">
        <h1>Service Médical</h1>

        <!-- Tabs -->
        <ul class="nav nav-tabs" id="medicalTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="fiches-tab" data-bs-toggle="tab" data-bs-target="#fiches" type="button" role="tab">Fiches médicales</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="visites-tab" data-bs-toggle="tab" data-bs-target="#medvisites" type="button" role="tab">Visites médicales</button>
            </li>
        </ul>

        <div class="tab-content" id="medicalTabContent">
            <!-- Tab Fiches médicales -->
            <div class="tab-pane fade show active" id="fiches" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h3>Liste des fiches médicales</h3>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMedicalFileModal">
                        <i class="bi bi-plus-circle"></i> Créer une fiche médicale
                    </button>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>N° Dossier</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Profession</th>
                            <th>Date de création</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for fiche in fichesMedicales %}
                            <tr>
                                <td>{{ fiche.numeroDossier }}</td>
                                <td>{{ fiche.nom }}</td>
                                <td>{{ fiche.prenom }}</td>
                                <td>{{ fiche.profession }}</td>
                                <td>{{ fiche.date ? fiche.date|date('d/m/Y') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_service_medical_show', {'id': fiche.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_service_medical_edit', {'id': fiche.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_service_medical_delete', {'id': fiche.id}) }}" style="display:inline;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche médicale ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiche.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucune fiche médicale trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tab Visites médicales -->
            <div class="tab-pane fade" id="medvisites" role="tabpanel">
                <h3 class="mt-3">Liste des visites médicales</h3>
                <!-- Contenu de la liste des visites médicales -->
            </div>
        </div>
    </div>

    <!-- Modal pour ajouter une fiche médicale -->
    <div class="modal fade" id="addMedicalFileModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Créer une fiche médicale</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'id': 'medical-file-form'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.employe) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.numeroDossier) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.nom) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.nomJeuneFille) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.nee) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.adresse) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.personneAContacter) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.profession) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.groupeSanguinRhesus) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                {{ form_row(form.allergie) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.antecedentsFamiliaux) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.antecedentsPersonnels) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                {{ form_row(form.correspondantsMedicaux) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.date) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.diagnostic) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                {{ form_row(form.conduiteAvenir) }}
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
