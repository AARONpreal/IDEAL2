<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Application Entreprise{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_dashboard') }}">EntrepriseBD</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_rh_index') }}">Ressources Humaines</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_service_medical_index') }}">Service Médical</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<script>
    // Script pour la gestion des listes déroulantes dynamiques
    $(document).ready(function() {
        $('#employe_departement').change(function() {
            var departementId = $(this).val();
            var serviceSelect = $('#employe_service');

            // Effacer les options existantes
            serviceSelect.empty();
            serviceSelect.append('<option value="">Choisir un service...</option>');

            if (departementId) {
                $.ajax({
                    url: '/rh/departements/' + departementId + '/services',
                    type: 'GET',
                    dataType: 'json',
                    success: function(services) {
                        $.each(services, function(index, service) {
                            serviceSelect.append('<option value="' + service.id + '">' + service.nom + '</option>');
                        });
                    }
                });
            }
        });

        // Remplissage automatique des informations employé dans la fiche médicale
        $('#fiche_medical_employe').change(function() {
            var employeId = $(this).val();

            if (employeId) {
                $.ajax({
                    url: '/service-medical/employe/' + employeId + '/info',
                    type: 'GET',
                    dataType: 'json',
                    success: function(data) {
                        $('#fiche_medical_nom').val(data.nom);
                        $('#fiche_medical_prenom').val(data.prenom);
                        $('#fiche_medical_profession').val(data.profession);

                        // Générer numéro de dossier
                        var numeroDossier = 'DM-' + new Date().getFullYear() + '-' + employeId;
                        $('#fiche_medical_numeroDossier').val(numeroDossier);
                    }
                });
            }
        });
    });
</script>
</body>
</html>
